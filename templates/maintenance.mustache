{{{ output.doctype }}}
<html {{{ output.htmlattributes }}}>
<head>
    <title>{{{ output.page_title }}}</title>
    <link rel="shortcut icon" href="{{{ output.favicon }}}" />
    {{{ output.standard_head_html }}}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body 
	{{{ output.body_attributes }}}
	style="
		background-image: url({{wwwroot}}/theme/academy/pix/maintenance_bkg.jpg);
		background-position: bottom;
		background-size: cover;
	"
>
{{> core/local/toast/wrapper}}
<div id="page-wrapper">
    {{{ output.standard_top_of_body_html }}}
    <div id="page" class="container pb-3">
        <div id="page-content" class="row" style="margin-top: -5em">
            <section
							class="col-12 text-light d-flex flex-column align-items-center justify-content-center"
							aria-label="{{#str}}content{{/str}}"
						>
								<div class="text-center mb-5">
									<img src="{{wwwroot}}/theme/academy/pix/logo_light.png" style="max-width: 80%; width: 500px;" />
								</div>
								<div class="text-center">
									{{{ output.main_content }}}
								</div>
            </section>
        </div>

    </div>
		{{{ output.standard_end_of_body_html }}}
</div>

</body>
</html>
{{#js}}
M.util.js_pending('theme_boost/loader');
require(['theme_boost/loader'], function() {
  M.util.js_complete('theme_boost/loader');
});
{{/js}}
